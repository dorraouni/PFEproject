
   <!DOCTYPE html>
<html>
<head>
<style>
    body {
    margin:     0;
    padding:    0;
    width:      21cm;
    height:     29.7cm;
}

/* Printable area */
#print-area {
    position:   relative;
    top:        1cm;
    left:       1cm;
    width:      25cm;
    height:     30cm;

    font-size:      15px;
    font-family:    Arial;
}
#content{
    padding-top: 10px;
}
#header {
    height:     3cm;
    font-size: 15px;
    background: #ccc;
    position: inherit;
}
#footer {
    position:   absolute;
    bottom:     0;
    width:      100%;
    height:     3cm;

    background: #ccc;
}
.colorr{
    color: red;
}
.green {
    color: green;
}
</style>
</head>
<body>

    <div id="print-area" >
        <div id="header">
            <h1><center>Facture n1</center></h1>
        </div>
        <div id="content">
            <h1>AutoPass</h1>
            <h2>Tunisie</h2>
            <h2>Destinataire: {{candidat}}</h2>
        </div>
        
{#        <div class="box-body table-responsive no-padding">#}
        <center>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th><h3 class="colorr"> Description </h3></th>
                    <th><h3 class="colorr"> Nombre d'heures </h3></th>
                    <th><h3 class="colorr"> Prix unitaire </h3></th>
                    <th><h3 class="colorr">  Montant </h3> </th>

                </tr>
            </thead>
            <tbody>
              <tr>
                  <td><h3 class="green"> Code de la route </h3></td>
                  <td><h3><center> {{numberofcodehours}} </center></h3></td>
                  <td><h3> 12 dinars </h3></td>
                  <td><h3> {{totalCodeRoute}} Dinars </h3></td>
              </tr>

              <tr>
                  <td><h3 class="green"> Conduite </h3></td>
                  <td><h3><center>{{ numberofconduitehours}}</center>  </h3></td>
                  <td><h3> 20 dinars </h3></td>
                  <td><h3> {{totalConduite}} Dinars </h3></td>
              </tr>
            </tbody>
                
        </table>
        </center>
       
        
