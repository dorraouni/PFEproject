{#{#{% extends "default/index.html.twig" %}
#}
    <div class="col-md-4 compose">   	 	
            <div class="mail-profile">
                <div class="mail-pic">
                        {% set variable = user.photo%}
                            <span class="prfil-img">
                        <img class="image-profile" src="{{asset('uploads/avatar/'~variable)}}"></span>
                </div>
                <div class="mailer-name"> 			
                    <h5><a href="#"> {{user.username}} </a></h5>  	 				
                    <h6><a href="#"> {{user.email}} </a></h6>   
                </div>
                <div class="clearfix"> </div>
            </div>
            <div class="compose-block">
                    <a href="{{path('message_new')}}">Nouveau Message</a>
            </div>
            <div class="compose-bottom">
                <nav class="nav-sidebar">
                    <ul class="nav tabs">
                        <li class="active"><a href="{{path('message_index')}}" data-toggle="tab" aria-expanded="true"><i class="fa fa-inbox"></i>Boite de réception {%if messagesReçus|length>0%}<span>{{ messagesReçus|length}}</span>{%endif%}<div class="clearfix"></div></a></li>
                        <li class="active"><a href="{{path('message_envoie')}}" data-toggle="tab" aria-expanded="false"><i class="fa fa-envelope-o"></i>Messages envoyés {%if messagesEnvoyés|length>0%}<span>{{ messagesEnvoyés|length}}</span>{%endif%}<div class="clearfix"></div></a></li>
                    </ul>
                </nav>
            </div>
    </div>
    <style>
        .image-profile {
        border-radius: 50%;
        margin-right: 10px;
        width: 70px;
        height: 70px;
                        }
    </style>
