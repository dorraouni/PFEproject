{% block body %}
     <style>
        .btn-file{
            padding: 0;
            background-color: #0b3f6b;
            font-size: 9px;
        }
        .fileinput-upload,.fileinput-remove{
            padding: 0;
            font-size: 9px;
        }
    </style>
   {# <h1><b>Ajout d'un nouveau moniteur</b></h1>
    <hr>
    {% include 'User/Registration/register_content.html.twig'%}#}

   <div class="x_content">

        <h1><b>Ajout d'un nouveau moniteur</b></h1>
        <hr>
        <form class="form-horizontal form-label-left"  action="{{path('fos_user_registration_register')}}"  method="post">
            {{ form_widget(form._token) }}
                    <div class="item form-group bad">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="username">Nom d'utilisateur <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{form_widget(form.username,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} }) }}
                            {{ form_errors(form.username) }}
                        </div>
                    </div>
                        
                    <div class="item form-group bad">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="texte">Ajouter Une Photo <span class="required"></span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input id="input-1" name="input-1" type="file"  class="file-loading" required="true">
                        </div>

                        <script>
                            $(document).on('ready', function() {
                                $("#input-1").fileinput({

                                    language : "fr"

                                });
                            });
                        </script>
                    </div>
                      
                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">Nom <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{form_widget(form.nom,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} }) }}
                            {{ form_errors(form.nom) }}
                        </div>
                    </div>
                      
                    
                      
                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="prenom"> Prénom <span class="required">*</span>
                        </label>

                        <div class="col-md-6 col-sm-6 col-xs-12">
                             {{form_widget(form.prenom,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} }) }}
                            {{ form_errors(form.prenom) }}
                        </div>
                    </div>
                      
                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="email">Email <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">

                                {{form_widget(form.email,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                                {{ form_errors(form.email) }}
                        </div>
                    </div>
                      
                     
                    <div class="item form-group">
                        <label for="password" class="control-label col-md-3">Mot de passe <span class="required">*</span></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget (form.plainPassword.first,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                            {{ form_errors(form.plainPassword.first) }}
                        </div>
                    </div>
                    <div class="item form-group">
                        <label for="password2" class="control-label col-md-3 col-sm-3 col-xs-12">Confirmer Mot de passe <span class="required">*</span></label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{ form_widget (form.plainPassword.second,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                            {{ form_errors(form.plainPassword.second) }}
                        </div>
                    </div>
                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="telephone">Téléphone <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{form_widget(form.telephone,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'}}) }}
                            {{ form_errors(form.telephone) }}
                        </div>
                    </div>
                        
                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">Adresse <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            {{form_widget(form.adresse,{ 'attr': {'class': 'form-control col-md-7 col-xs-12'} }) }}
                            {{ form_errors(form.adresse) }}
                        </div>
                    </div>
                        
                    <div class="item form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="name">Date de naissance <span class="required">*</span>
                        </label>
                       
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input class="form-control col-md-7 col-xs-12" type="text" name="birthdate" required="true" value="24-10-1994" />
                        </div>
                    </div>

                    <script type="text/javascript">
                        $(function() {
                            $('input[name="birthdate"]').daterangepicker({
                                locale: {
                                    format : 'DD-MM-YYYY',
                                },
                                singleDatePicker: true,
                                showDropdowns: true
                             });
                        });
                    </script>
                      
                    <div class="ln_solid"></div>
                      <div class="form-group">
                        <div class="col-md-6 col-md-offset-3">
                          <button  type="submit"  class="btn btn-success">Valider</button>
                        </div>
                      </div>
        </form>
 
   </div>
 
{%endblock%}